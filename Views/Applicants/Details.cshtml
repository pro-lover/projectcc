            @Html.DisplayFor(m => m.ResidentialAddress, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Finish", "Index","Home",null, null)   |  
            @Html.ActionLink("Update Details", "Edit", new { id=@Model.Id })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
}
